# GPUStack UI Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENV=development

# GPUStack API Configuration
GPUSTACK_API_BASE=http://localhost:8080
GPUSTACK_API_TOKEN=your-gpustack-api-token

# Tavily Search API
TAVILY_API_KEY=your-tavily-api-key

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001
WORKERS=3
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=3000
BACKEND_URL=http://localhost:8001

# Database (Optional - for future use)
DATABASE_URL=sqlite:///./gpustack_ui.db

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads

# Logging
LOG_DIR=./logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Production overrides (only used in production)
PROD_JWT_SECRET_KEY=change-this-in-production
PROD_DATABASE_URL=postgresql://user:password@localhost:5432/gpustack_ui
PROD_REDIS_URL=redis://redis:6379/0

